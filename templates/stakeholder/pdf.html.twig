<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% trans %}Stakeholder Details{% endtrans %}</title>
    <style>
        body {
            font-family: sans-serif;
            font-size: 12px;
            color: #333;
            {% if background_base64 %}
            background-image: url("{{ background_base64 }}");
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-position: center;
            background-size: 100% 100%;
            {% endif %}
        }
        h1 {
            color: #611232;
            border-bottom: 2px solid #611232;
            padding-bottom: 10px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        th, td {
            text-align: left;
            padding: 8px;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #f2f2f2;
            width: 30%;
        }
        .image-container {
            margin-top: 20px;
            text-align: center;
        }
        .image-container img {
            max-width: 100%;
            height: auto;
            border: 1px solid #ccc;
            margin-bottom: 10px;
        }
        .label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }
    </style>
</head>
<body>
    <h1>{% trans %}Stakeholder{% endtrans %}</h1>

    <table>
        <tbody>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <td>{{ stakeholder.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Name{% endtrans %}</th>
                <td>{{ stakeholder.name|title }}</td>
            </tr>
            <tr>
                <th>{% trans %}DNI{% endtrans %}</th>
                <td>{{ stakeholder.dni }}</td>
            </tr>
            <tr>
                <th>{% trans %}Tag{% endtrans %}</th>
                <td>{{ stakeholder.tag }}</td>
            </tr>
            <tr>
                <th>{% trans %}Subject{% endtrans %}</th>
                <td>{{ stakeholder.subject }}</td>
            </tr>
            <tr>
                <th>{% trans %}Destination{% endtrans %}</th>
                <td>{{ stakeholder.destination }}</td>
            </tr>
            <tr>
                <th>{% trans %}Check in{% endtrans %}</th>
                <td>{{ stakeholder.checkInAt ? stakeholder.checkInAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{% trans %}User who checked in{% endtrans %}</th>
                <td>{{ stakeholder.checkInUser ? stakeholder.checkInUser.username : '' }}</td>
            </tr>
            <tr>
                <th>{% trans %}Check out{% endtrans %}</th>
                <td>{{ stakeholder.checkOutAt ? stakeholder.checkOutAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{% trans %}User who checked out{% endtrans %}</th>
                <td>{{ stakeholder.checkOutUser ? stakeholder.checkOutUser.username : '' }}</td>
            </tr>
        </tbody>
    </table>

    {% if evidence_base64 %}
        <div class="image-container">
            <span class="label">{% trans %}Evidence{% endtrans %}</span>
            <img src="{{ evidence_base64 }}" alt="Evidence">
        </div>
    {% endif %}

    {% if sign_base64 %}
        <div class="image-container">
            <span class="label">{% trans %}Signature{% endtrans %}</span>
            <img src="{{ sign_base64 }}" alt="Signature">
        </div>
    {% endif %}

</body>
</html>
