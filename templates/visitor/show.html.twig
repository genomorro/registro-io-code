{% extends 'base.html.twig' %}

{% block title %}{% trans %}Visitor{% endtrans %}{% endblock %}

{% block body %}
    <ol class="breadcrumb">
	<li class="breadcrumb-item"><a href="www.gob.mx"><i class="icon icon-home"></i></a></li>
	<li class="breadcrumb-item"><a href="{{ path('app_index') }}">{% trans %}Begin{% endtrans %}</a></li>
	<li class="breadcrumb-item"><a href="{{ path('app_visitor_index') }}">{% trans %}Visitor{% endtrans %}</a></li>
	<li class="breadcrumb-item active" aria-current="page"><a href="{{ path('app_visitor_show', {'id': visitor.id}) }}">{% trans %}Show{% endtrans %}</a></li>
    </ol>

    <h1>{% trans %}Visitor{% endtrans %}</h1>
    <hr class="red">

    <div class="table-responsible">
	<table class="table table-striped">
            <tbody>
		<tr>
                    <th>{% trans %}Id{% endtrans %}</th>
                    <td>{{ visitor.id }}</td>
		</tr>
		<tr>
                    <th>{% trans %}Name{% endtrans %}</th>
                    <td>{{ visitor.name }}</td>
		</tr>
		<tr>
                    <th>{% trans %}Phone{% endtrans %}</th>
                    <td>{{ visitor.phone }}</td>
		</tr>
		<tr>
                    <th>{% trans %}DNI{% endtrans %}</th>
                    <td>{{ visitor.dni }}</td>
		</tr>
		<tr>
                    <th>{% trans %}Tag{% endtrans %}</th>
                    <td>{{ visitor.tag }}</td>
		</tr>
		<tr>
                    <th>{% trans %}Destination{% endtrans %}</th>
                    <td>{{ visitor.destination }}</td>
		</tr>
		<tr>
                    <th>{% trans %}Check in{% endtrans %}</th>
                    <td>{{ visitor.checkInAt ? visitor.checkInAt|date('Y-m-d H:i:s') : '' }}</td>
		</tr>
		<tr>
                    <th>{% trans %}Check out{% endtrans %}</th>
                    <td>
			{% if visitor.CheckOutAt %}
                            {{ visitor.CheckOutAt|date('Y-m-d H:i:s') }}
			{% else %}
                            <form method="post" action="{{ path('app_visitor_check_out_show', {'id': visitor.id}) }}" onsubmit="return confirm('{% trans %}Are you sure you want to check out?{% endtrans %}');">
				<input type="hidden" name="_token" value="{{ csrf_token('checkout' ~ visitor.id) }}">
				<button class="btn btn-sm btn-danger">{% trans %}Check out{% endtrans %}</button>
                            </form>
			{% endif %}
                    </td>
		</tr>
		<tr>
                    <th>{% trans %}Relationship{% endtrans %}</th>
                    <td>{{ visitor.relationship }}</td>
		</tr>
		<tr>
                    <th>{% trans %}Patients{% endtrans %}</th>
                    <td>
			<ul>
			    {% for patient in visitor.patient %}
				<li>{{ patient.name }} ({% trans %}File{% endtrans %}: {{ patient.file }})</li>
			    {% endfor %}
			</ul>
                    </td>
		</tr>
            </tbody>
	</table>
    </div>

    <div class="d-grid gap-2 d-md-block">
	<a class="btn btn-primary" href="{{ path('app_visitor_edit', {'id': visitor.id}) }}">{% trans %}Edit{% endtrans %}</a>
	<a class="btn btn-link" href="{{ path('app_visitor_index') }}">{% trans %}Back to list{% endtrans %}</a>
    </div>

    {% if is_granted('ROLE_SUPER_ADMIN') %}
	<div class="row">
	    <div class="col-md-10"></div>
	    <div class="col-md-1">
		{{ include('visitor/_delete_form.html.twig') }}
	    </div>
	</div>
    {% endif %}
{% endblock %}
