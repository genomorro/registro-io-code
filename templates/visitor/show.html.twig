{% extends 'base.html.twig' %}

{% block title %}Visitor{% endblock %}

{% block body %}
    <h1>Visitor</h1>

    <div class="table-responsible">
	<table class="table table-striped">
            <tbody>
		<tr>
                    <th>Id</th>
                    <td>{{ visitor.id }}</td>
		</tr>
		<tr>
                    <th>Name</th>
                    <td>{{ visitor.name }}</td>
		</tr>
		<tr>
                    <th>Phone</th>
                    <td>{{ visitor.phone }}</td>
		</tr>
		<tr>
                    <th>Dni</th>
                    <td>{{ visitor.dni }}</td>
		</tr>
		<tr>
                    <th>Tag</th>
                    <td>{{ visitor.tag }}</td>
		</tr>
		<tr>
                    <th>Destination</th>
                    <td>{{ visitor.destination }}</td>
		</tr>
		<tr>
                    <th>CheckInAt</th>
                    <td>{{ visitor.checkInAt ? visitor.checkInAt|date('Y-m-d H:i:s') : '' }}</td>
		</tr>
		<tr>
                    <th>CheckOutAt</th>
                    <td>
			{% if visitor.CheckOutAt %}
                            {{ visitor.CheckOutAt|date('Y-m-d H:i:s') }}
			{% else %}
                            <form method="post" action="{{ path('app_visitor_check_out_show', {'id': visitor.id}) }}" onsubmit="return confirm('Are you sure you want to check out?');">
				<input type="hidden" name="_token" value="{{ csrf_token('checkout' ~ visitor.id) }}">
				<button class="btn btn-sm btn-danger">Check Out</button>
                            </form>
			{% endif %}
                    </td>
		</tr>
		<tr>
                    <th>Relationship</th>
                    <td>{{ visitor.relationship }}</td>
		</tr>
		<tr>
                    <th>Patients</th>
                    <td>
			<ul>
			    {% for patient in visitor.patient %}
				<li>{{ patient.name }} (File: {{ patient.file }})</li>
			    {% endfor %}
			</ul>
                    </td>
		</tr>
            </tbody>
	</table>
    </div>

    <div class="d-grid gap-2 d-md-block">
	<a class="btn btn-primary" href="{{ path('app_visitor_edit', {'id': visitor.id}) }}">Edit</a>
	<a class="btn btn-link" href="{{ path('app_visitor_index') }}">Back to list</a>
    </div>

    <div class="row">
	<div class="col-md-10"></div>
	<div class="col-md-1">
	    {{ include('visitor/_delete_form.html.twig') }}
	</div>
    </div>
{% endblock %}
