{% extends 'base.html.twig' %}

{% block title %}{% trans %}Register{% endtrans %}{% endblock %}

{% block body %}
    <ol class="breadcrumb">
	<li class="breadcrumb-item"><a href="www.gob.mx"><i class="icon icon-home"></i></a></li>
	<li class="breadcrumb-item"><a href="{{ path('app_index') }}">{% trans %}Begin{% endtrans %}</a></li>
	<li class="breadcrumb-item active" aria-current="page"><a href="{{ path(app.request.get('_route'),app.request.get('_route_params')) }}">{{ title|trans }}</a></li>
    </ol>
    
    <h1>{{ title|trans }}</h1>
    <hr class="red">

    <div class="row">
      {{ form_start(registrationForm) }}
          <div class="form-group">
	      {{ form_label(registrationForm.name) }}:
	      <div class="row">
		  <div class="col-md-6">
                      <small>{{ form_help(registrationForm.name) }}</small>
		      {{ form_widget(registrationForm.name) }}
		      <span class="text-danger">{{ form_errors(registrationForm.name) }}</span>
		  </div>
	      </div>
	  </div>
          <div class="form-group">
	      {{ form_label(registrationForm.username) }}:
	      <div class="row">
		  <div class="col-md-6">
                      <small>{{ form_help(registrationForm.username) }}</small>
		      {{ form_widget(registrationForm.username) }}
		      <span class="text-danger">{{ form_errors(registrationForm.username) }}</span>
		  </div>
	      </div>
	  </div>
          <div class="form-group">
	      <div class="row">
		  <div class="col-md-6">
                      <small>{{ form_help(registrationForm.plainPassword) }}</small>
		      {{ form_widget(registrationForm.plainPassword) }}
		      <span class="text-danger">{{ form_errors(registrationForm.plainPassword) }}</span>
		  </div>
	      </div>
	  </div>
          <div class="form-group">
	      {{ form_label(registrationForm.roles) }}:
	      <div class="row">
		  <div class="col-md-6">
                      <small>{{ form_help(registrationForm.roles) }}</small>
		      {{ form_widget(registrationForm.roles) }}
		      <span class="text-danger">{{ form_errors(registrationForm.roles) }}</span>
		  </div>
	      </div>
	  </div>

	  <div class="d-grid gap-2 d-md-block">
		<button type="submit" value="Save" class="btn btn-primary">{% trans %}Save{% endtrans %}</button>
		<button type="reset" value="Reset" class="btn btn-secondary">{% trans %}Reset{% endtrans %}</button>
		{% if is_granted('ROLE_ADMIN') %}
		    <a class="btn btn-link" href="{{ path('app_user_index') }}" role="button">{% trans %}Back to list{% endtrans %}</a>
		{% endif %}
	    </div>
      {{ form_end(registrationForm) }}
    </div>
{% endblock %}
