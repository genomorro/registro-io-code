{% extends 'base.html.twig' %}

{% block title %}Patient{% endblock %}

{% block body %}
    <h1>Patient</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ patient.id }}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{{ patient.file }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ patient.name }}</td>
            </tr>
            <tr>
                <th>Disability</th>
                <td>{{ patient.disability ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <hr>

    <h2>Today's Attendance</h2>
    {% set todays_attendance = patient.attendances|filter(a => a.checkinAt|date('Y-m-d') == "now"|date('Y-m-d'))|first %}
    {% if todays_attendance %}
        <table class="table">
            <tbody>
                <tr>
                    <th>Check-in</th>
                    <td>{{ todays_attendance.checkinAt|date('Y-m-d H:i:s') }}</td>
                </tr>
                <tr>
                    <th>Check-out</th>
                    <td>{{ todays_attendance.checkoutAt ? todays_attendance.checkoutAt|date('Y-m-d H:i:s') : 'Not checked out yet' }}</td>
                </tr>
            </tbody>
        </table>
    {% else %}
        <p>No attendance record for today.</p>
    {% endif %}
    
    <hr>

    <h2>Today's Appointments</h2>
    {% set todays_appointments = patient.appointments|filter(a => a.dateAt|date('Y-m-d') == "now"|date('Y-m-d')) %}
    {% if todays_appointments is not empty %}
        <table class="table">
            <thead>
                <tr>
                    <th>Place</th>
                    <th>Type</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
            {% for appointment in todays_appointments %}
                <tr>
                    <td>{{ appointment.place }}</td>
                    <td>{{ appointment.type }}</td>
                    <td>{{ appointment.dateAt ? appointment.dateAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No appointments for today.</p>
    {% endif %}

    <h2>Other Appointments</h2>
    {% set other_appointments = patient.appointments|filter(a => a.dateAt|date('Y-m-d') != "now"|date('Y-m-d')) %}
    {% if other_appointments is not empty %}
        <table class="table">
            <thead>
                <tr>
                    <th>Place</th>
                    <th>Type</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
            {% for appointment in other_appointments %}
                <tr>
                    <td>{{ appointment.place }}</td>
                    <td>{{ appointment.type }}</td>
                    <td>{{ appointment.dateAt ? appointment.dateAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No other appointments.</p>
    {% endif %}

