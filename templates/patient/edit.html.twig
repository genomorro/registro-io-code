{% extends 'base.html.twig' %}

{% block title %}{% trans %}Edit Patient{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}Edit Patient{% endtrans %}</h1>

    <div class="row">
	{{ form_start(form) }}
	    <div class="form-group">
		{{ form_label(form.file) }}:
		<div class="row">
		    <div class="col-md-6">
			{{ form_widget(form.file) }}
			<span class="text-danger">{{ form_errors(form.file) }}</span>
		    </div>
		</div>
	    </div>
	    <div class="form-group">
		{{ form_label(form.name) }}:
		<div class="row">
		    <div class="col-md-6">
			{{ form_widget(form.name) }}
			<span class="text-danger">{{ form_errors(form.name) }}</span>
		    </div>
		</div>
	    </div>
	    {{ form_widget(form.disability) }}
	    
	    <div class="d-grid gap-2 d-md-block">
		{% if is_granted('ROLE_ADMIN') %}
		    <button type="submit" value="Update" class="btn btn-primary">{% trans %}Update{% endtrans %}</button>
		{% endif %}
		<a class="btn btn-link" href="{{ path('app_patient_index') }}" role="button">{% trans %}Back to list{% endtrans %}</a>
	    </div>
	{{ form_end(form) }}
    </div>
    
    {% if is_granted('ROLE_SUPER_ADMIN') %}
	<div class="row">
	    <div class="col-md-10"></div>
	    <div class="col-md-1">
		{{ include('patient/_delete_form.html.twig') }}
	    </div>
	</div>
    {% endif %}
{% endblock %}
