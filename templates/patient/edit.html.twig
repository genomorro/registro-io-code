{% extends 'base.html.twig' %}

{% block title %}Edit Patient{% endblock %}

{% block body %}
    <h1>Edit Patient</h1>

    <div class="row">
	{{ form_start(form) }}
	    <div class="form-group">
		{{ form_label(form.file) }}:
		<div class="row">
		    <div class="col-md-6">
			{{ form_widget(form.file) }}
			<span class="text-danger">{{ form_errors(form.file) }}</span>
		    </div>
		</div>
	    </div>
	    <div class="form-group">
		{{ form_label(form.name) }}:
		<div class="row">
		    <div class="col-md-6">
			{{ form_widget(form.name) }}
			<span class="text-danger">{{ form_errors(form.name) }}</span>
		    </div>
		</div>
	    </div>

	    {{form_widget(form.disability)}}
	    
	    <div class="form-group btn-group">
		<button type="submit" value="Update" class="btn btn-primary">Update</button>
		<a class="btn btn-link" href="{{ path('app_patient_index') }}" role="button">Back to list</a>
	    </div>

	    
	{{ form_end(form) }}
    </div>
    
    <div class="row">
	<div class="col-md-10"></div>
	<div class="col-md-1">
	    {{ include('patient/_delete_form.html.twig') }}
	</div>
    </div>
{% endblock %}
