{% extends 'base.html.twig' %}

{% block title %}{% trans %}New Patient{% endtrans %}{% endblock %}

{% block body %}
    <ol class="breadcrumb">
	<li class="breadcrumb-item"><a href="https://www.gob.mx"><i class="icon icon-home"></i></a></li>
	<li class="breadcrumb-item"><a href="{{ path('app_index') }}">{% trans %}Begin{% endtrans %}</a></li>
	<li class="breadcrumb-item"><a href="{{ path('app_patient_index') }}">{% trans %}Patient{% endtrans %}</a></li>
	<li class="breadcrumb-item active" aria-current="page"><a href="{{ path('app_patient_new') }}">{% trans %}New{% endtrans %}</a></li>
    </ol>

    <h1>{% trans %}Create new Patient{% endtrans %}</h1>
    <hr class="red">

    <div class="row">
	{{ form_start(form) }}
	    <div class="form-group">
		{{ form_label(form.file) }}:
		<div class="row">
		    <div class="col-md-6">
			{{ form_widget(form.file) }}
			<span class="text-danger">{{ form_errors(form.file) }}</span>
		    </div>
		</div>
	    </div>
	    <div class="form-group">
		{{ form_label(form.name) }}:
		<div class="row">
		    <div class="col-md-6">
			{{ form_widget(form.name) }}
			<span class="text-danger">{{ form_errors(form.name) }}</span>
		    </div>
		</div>
	    </div>

	    {{ form_widget(form.disability) }}
	    
	    <div class="d-grid gap-2 d-md-block">
		<button type="submit" value="Save" class="btn btn-primary">{% trans %}Save{% endtrans %}</button>
		<button type="reset" value="Reset" class="btn btn-secondary">{% trans %}Reset{% endtrans %}</button>
		<a class="btn btn-link" href="{{ path('app_patient_index') }}" role="button">{% trans %}Back to list{% endtrans %}</a>
	    </div>
	{{ form_end(form) }}
    </div>
{% endblock %}
