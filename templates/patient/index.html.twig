{% extends 'base.html.twig' %}

{% block title %}{% trans %}Patient index{% endtrans %}{% endblock %}

{% block body %}
    <ol class="breadcrumb">
	<li class="breadcrumb-item"><a href="https://www.gob.mx"><i class="icon icon-home"></i></a></li>
	<li class="breadcrumb-item"><a href="{{ path('app_index') }}">{% trans %}Begin{% endtrans %}</a></li>
	<li class="breadcrumb-item active" aria-current="page"><a href="{{ path('app_patient_index') }}">{% trans %}Patient{% endtrans %}</a></li>
    </ol>

    <h1>{% trans %}Patient index{% endtrans %}</h1>
    <hr class="red">

    <div {{ stimulus_controller('webrtc') }} data-webrtc-logo-url="{{ asset('images/iner-logo.png') }}">
	<div class="col-md d-flex align-items-center justify-content-center flex-column">
	    <video id="" data-webrtc-target="video" class="border mt-0 img-fluid w-25" poster="{{ asset('images/iner-logo.png') }}" autoplay></video>
            <div class="my-2">
                <select data-webrtc-target="cameraSelect" data-action="change->webrtc#switchCamera" class="form-select form-select-sm d-none d-inline-block w-auto"></select>
                <button type="button" data-webrtc-target="flipButton" data-action="click->webrtc#flipCamera" class="btn btn-sm btn-secondary d-none">{% trans %}Flip Camera{% endtrans %}</button>
            </div>
	    <canvas data-webrtc-target="canvas" class="d-none"></canvas>
	</div>

	<div class="row">
	    <div class="col-12 col-md-6 d-flex justify-content-start">
		<form class="w-100" method="get" action="{{ path('app_patient_index') }}">
		    <div class="input-group mb-3">
			<input type="text" name="filter" class="form-control w-75" style="height: 32px" placeholder="{% trans %}Search by File or Name{% endtrans %}" value="{{ app.request.query.get('filter') }}">
			<button class="btn btn-sm btn-info" type="submit">{% trans %}Search{% endtrans %}</button>
		    </div>
		</form>
	    </div>

	    <div class="col-12 col-md-6 d-flex justify-content-md-end justify-content-start mt-2 mt-md-0">
		Registros totales: {{ patients.getTotalItemCount }}
	    </div>
	</div>

	<div class="table-responsive">
	    <table class="table table-hover">
		<thead>
		    <tr>
			{% if is_granted('ROLE_SUPER_ADMIN') %}
			    <th scope="col">{{ knp_pagination_sortable(patients, 'Id'|trans, 'p.id') }}</th>
			{% endif %}
			<th scope="col">{{ knp_pagination_sortable(patients, 'File'|trans, 'p.file') }}</th>
			<th scope="col">{{ knp_pagination_sortable(patients, 'Name'|trans, 'p.name') }}</th>
			<th scope="col">{{ knp_pagination_sortable(patients, 'Disability'|trans, 'p.disability') }}</th>
			<th scope="col">{{ knp_pagination_sortable(patients, 'Check in'|trans, 'att.checkInAt') }}</th>
			<th scope="col">{{ knp_pagination_sortable(patients, 'Check out'|trans, 'att.checkOutAt') }}</th>
			<th>{% trans %}actions{% endtrans %}</th>
		    </tr>
		</thead>
		<tbody>
		    {% for patient in patients %}
			{% set todays_attendance = patient.attendances|filter(a => a.checkInAt|date('Y-m-d') == "now"|date('Y-m-d'))|first %}
			<tr>
			    {% if is_granted('ROLE_SUPER_ADMIN') %}
				<td>{{ patient.id }}</td>
			    {% endif %}
			    <td>{{ patient.file }}</td>
			    <td>{{ patient.name|title }}</td>
			    <td>{{ patient.disability ? 'Yes'|trans : 'No'|trans }}</td>
			    <td>
				{% if todays_attendance %}
				    {{ todays_attendance.checkInAt|date('Y-m-d H:i:s') }}
				{% else %}
				    <form method="post" action="{{ path('app_patient_check_in', {'id': patient.id}) }}" onsubmit="return confirm('{% trans %}Are you sure you want to check in?{% endtrans %}');" data-webrtc-target="form" data-action="submit->webrtc#capture">
					<input type="hidden" name="redirect_route" value="app_patient_index">
					<input type="hidden" name="evidence" data-webrtc-target="evidence">
					<div class="input-group">
					    <input type="text" name="tag" placeholder="{% trans %}Tag{% endtrans %}" required class="form-control input-sm w-50"/>
					    <button type="submit" class="btn btn-sm btn-success"><i class="bi bi-check"></i></button>
					</div>
				    </form>
				{% endif %}
			    </td>
			    <td>
				{% if todays_attendance and todays_attendance.checkOutAt %}
				    {{ todays_attendance.checkOutAt|date('Y-m-d H:i:s') }}
				{% elseif todays_attendance %}
				    <form method="post" action="{{ path('app_patient_check_out', {'id': patient.id}) }}" class="d-inline-block" onsubmit="return confirm('{% trans %}Are you sure you want to check out?{% endtrans %}');">
					<input type="hidden" name="redirect_route" value="app_patient_index">
					<button type="submit" class="btn btn-sm btn-danger">{% trans %}Check out{% endtrans %}</button>
				    </form>
				{% else %}
				    <button type="button" class="btn btn-sm btn-secondary" disabled>{% trans %}Check out{% endtrans %}</button>
				{% endif %}
			    </td>
			    <td>
				<a class="btn btn-link" href="{{ path('app_patient_show', {'id': patient.id}) }}">{% trans %}Show{% endtrans %}</a>
				{% if is_granted('ROLE_SUPER_ADMIN') %}
				    <a class="btn btn-secondary" href="{{ path('app_patient_edit', {'id': patient.id}) }}">{% trans %}Edit{% endtrans %}</a>
				{% endif %}
			    </td>
			</tr>
        {% else %}
			<tr>
			    <td colspan="7">{% trans %}no records found{% endtrans %}</td>
			</tr>
		    {% endfor %}
		</tbody>
	    </table>
	</div>
    </div>

    <div class="navigation">
        {{ knp_pagination_render(patients) }}
    </div>
    
    {% if is_granted('ROLE_SUPER_ADMIN') %}
	<a  class="btn btn-primary" href="{{ path('app_patient_new') }}">{% trans %}Create new{% endtrans %}</a>
    {% endif %}
{% endblock %}
