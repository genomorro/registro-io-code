{% extends 'base.html.twig' %}

{% block title %}{% trans %}New Appointment{% endtrans %}{% endblock %}

{% block body %}
    <ol class="breadcrumb">
	<li class="breadcrumb-item"><a href="www.gob.mx"><i class="icon icon-home"></i></a></li>
	<li class="breadcrumb-item"><a href="{{ path('app_index') }}">{% trans %}Begin{% endtrans %}</a></li>
	<li class="breadcrumb-item"><a href="{{ path('app_appointment_index') }}">{% trans %}Appointment{% endtrans %}</a></li>
	<li class="breadcrumb-item active" aria-current="page"><a href="{{ path('app_appointment_new') }}">{% trans %}New{% endtrans %}</a></li>
    </ol>

    <h1>{% trans %}Create new Appointment{% endtrans %}</h1>
    <hr class="red">

    <div class="row">
	{{ form_start(form) }}
	    <div class="form-group">
		{{ form_label(form.patient) }}:
		<div class="row">
		    <div class="col-md-6">
			{{ form_widget(form.patient) }}
			<span class="text-danger">{{ form_errors(form.patient) }}</span>
		    </div>
		</div>
	    </div>
	    <div class="form-group">
		{{ form_label(form.date_at) }}:
		<div class="row">
		    <div class="col-md-6">
			{{ form_widget(form.date_at) }}
			<span class="text-danger">{{ form_errors(form.date_at) }}</span>
		    </div>
		</div>
	    </div>
	    <div class="form-group">
		{{ form_label(form.agenda) }}:
		<div class="row">
		    <div class="col-md-6">
			{{ form_widget(form.agenda) }}
			<span class="text-danger">{{ form_errors(form.agenda) }}</span>
		    </div>
		</div>
	    </div>
	    <div class="form-group">
		{{ form_label(form.specialty) }}:
		<div class="row">
		    <div class="col-md-6">
			{{ form_widget(form.specialty) }}
			<span class="text-danger">{{ form_errors(form.specialty) }}</span>
		    </div>
		</div>
	    </div>
	    <div class="form-group">
		{{ form_label(form.location) }}:
		<div class="row">
		    <div class="col-md-6">
			{{ form_widget(form.location) }}
			<span class="text-danger">{{ form_errors(form.location) }}</span>
		    </div>
		</div>
	    </div>
	    <div class="form-group">
		{{ form_label(form.type) }}:
		<div class="row">
		    <div class="col-md-6">
			{{ form_widget(form.type) }}
			<span class="text-danger">{{ form_errors(form.type) }}</span>
		    </div>
		</div>
	    </div>
	    <div class="form-group">
		{{ form_label(form.status) }}:
		<div class="row">
		    <div class="col-md-6">
			{{ form_widget(form.status) }}
			<span class="text-danger">{{ form_errors(form.status) }}</span>
		    </div>
		</div>
	    </div>

	    <div class="d-grid gap-2 d-md-block">
		<button type="submit" value="Save" class="btn btn-primary">{% trans %}Save{% endtrans %}</button>
		<button type="reset" value="Reset" class="btn btn-secondary">{% trans %}Reset{% endtrans %}</button>
		<a class="btn btn-link" href="{{ path('app_appointment_index') }}" role="button">{% trans %}Back to list{% endtrans %}</a>
	    </div>
	{{ form_end(form) }}
    </div>
{% endblock %}
