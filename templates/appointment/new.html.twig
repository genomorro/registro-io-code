{% extends 'base.html.twig' %}

{% block title %}New Appointment{% endblock %}

{% block body %}
    <h1>Create new Appointment</h1>

    <div class="row">
	{{ form_start(form) }}
	    <div class="form-group">
		{{ form_label(form.patient) }}:
		<div class="row">
		    <div class="col-md-6">
			{{ form_widget(form.patient) }}
			<span class="text-danger">{{ form_errors(form.patient) }}</span>
		    </div>
		</div>
	    </div>
	    <div class="form-group">
		{{ form_label(form.date_at) }}:
		<div class="row">
		    <div class="col-md-6">
			{{ form_widget(form.date_at) }}
			<span class="text-danger">{{ form_errors(form.date_at) }}</span>
		    </div>
		</div>
	    </div>
	    <div class="form-group">
		{{ form_label(form.place) }}:
		<div class="row">
		    <div class="col-md-6">
			{{ form_widget(form.place) }}
			<span class="text-danger">{{ form_errors(form.place) }}</span>
		    </div>
		</div>
	    </div>
	    <div class="form-group">
		{{ form_label(form.type) }}:
		<div class="row">
		    <div class="col-md-6">
			{{ form_widget(form.type) }}
			<span class="text-danger">{{ form_errors(form.type) }}</span>
		    </div>
		</div>
	    </div>

	    <div class="d-grid gap-2 d-md-block">
		<button type="submit" value="Save" class="btn btn-primary">Save</button>
		<button type="reset" value="Reset" class="btn btn-secondary">Reset</button>
		<a class="btn btn-link" href="{{ path('app_appointment_index') }}" role="button">Back to list</a>
	    </div>
	{{ form_end(form) }}
    </div>
{% endblock %}
