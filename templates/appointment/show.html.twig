{% extends 'base.html.twig' %}

{% block title %}{% trans %}Appointment{% endtrans %}{% endblock %}

{% block body %}
    <ol class="breadcrumb">
	<li class="breadcrumb-item"><a href="https://www.gob.mx"><i class="icon icon-home"></i></a></li>
	<li class="breadcrumb-item"><a href="{{ path('app_index') }}">{% trans %}Begin{% endtrans %}</a></li>
	<li class="breadcrumb-item"><a href="{{ path('app_appointment_index') }}">{% trans %}Appointment{% endtrans %}</a></li>
	<li class="breadcrumb-item active" aria-current="page"><a href="{{ path('app_appointment_show', {'id': appointment.id}) }}">{% trans %}Show{% endtrans %}</a></li>
    </ol>

    <h1>{% trans %}Appointment{% endtrans %}</h1>
    <hr class="red">

    <div class="table-responsive">
	<table class="table table-striped">
            <tbody>
		{% if is_granted('ROLE_SUPER_ADMIN') %}
		    <tr>
			<th>{% trans %}Id{% endtrans %}</th>
			<td>{{ appointment.id }}</td>
		    </tr>
		{% endif %}
		<tr>
                    <th>{% trans %}Agenda{% endtrans %}</th>
                    <td>{{ appointment.agenda }}</td>
		</tr>
		<tr>
                    <th>{% trans %}Specialty{% endtrans %}</th>
                    <td>{{ appointment.specialty }}</td>
		</tr>
		<tr>
                    <th>{% trans %}Location{% endtrans %}</th>
                    <td>{{ appointment.location }}</td>
		</tr>
		<tr>
                    <th>{% trans %}Date at{% endtrans %}</th>
                    <td>{{ appointment.dateAt ? appointment.dateAt|date('Y-m-d H:i:s') : '' }}</td>
		</tr>
		<tr>
                    <th>{% trans %}Type{% endtrans %}</th>
                    <td>{{ appointment.type }}</td>
		</tr>
		<tr>
                    <th>{% trans %}Status{% endtrans %}</th>
                    <td>{{ appointment.status }}</td>
		</tr>
		<tr>
                    <th>{% trans %}Patient name{% endtrans %}</th>
                    <td>{{ appointment.patient.name|title }}</td>
		</tr>
		<tr>
                    <th>{% trans %}Patient file{% endtrans %}</th>
                    <td>{{ appointment.patient.file }}</td>
		</tr>
            </tbody>
	</table>
    </div>

    <div class="d-grid gap-2 d-md-block">
	{% if is_granted('ROLE_SUPER_ADMIN') %}
	    <a class="btn btn-primary" href="{{ path('app_appointment_edit', {'id': appointment.id}) }}">{% trans %}Edit{% endtrans %}</a>
	{% endif %}
	<a class="btn btn-link" href="{{ path('app_appointment_index') }}">{% trans %}Back to list{% endtrans %}</a>
    </div>

    {% if is_granted('ROLE_SUPER_ADMIN') %}
	<div class="row">
	    <div class="col-md-10"></div>
	    <div class="col-md-1">
		{{ include('appointment/_delete_form.html.twig') }}
	    </div>
	</div>
    {% endif %}

{% endblock %}
