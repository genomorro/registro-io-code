{% extends 'base.html.twig' %}

{% block body %}
    <ol class="breadcrumb">
	<li class="breadcrumb-item"><a href="www.gob.mx"><i class="icon icon-home"></i></a></li>
	<li class="breadcrumb-item"><a href="{{ path('app_index') }}">{% trans %}Begin{% endtrans %}</a></li>
	<li class="breadcrumb-item active" aria-current="page"><a href="{{ path('app_search_index') }}">{% trans %}Search{% endtrans %}</a></li>
    </ol>

    <h1>{% trans %}Search Options{% endtrans %}</h1>
    <hr class="red">

    <div>
	<p>
	    <ul class="nav nav-tabs" id="nav-tab" role="tablist">
		<li class="nav-link active" id="nav-tab-01" data-bs-toggle="tab" href="#nav-01" role="tab" aria-controls="nav-01" aria-selected="true">{% trans %}Search Patient by File{% endtrans %}</li>
		<li class="nav-link" id="nav-tab-02" data-bs-toggle="tab" href="#nav-02" role="tab" aria-controls="nav-02" aria-selected="false">{% trans %}Search by Tag{% endtrans %}</li>
		<li class="nav-link" id="nav-tab-03" data-bs-toggle="tab" href="#nav-03" role="tab" aria-controls="nav-03" aria-selected="false">{% trans %}Search by Name{% endtrans %}</li>
		<a class="nav-link" id="nav-tab-99" href="{{ path('app_search_check_list_index') }}">{% trans %}Check Out List{% endtrans %}</a>
	    </ul>
	</p>
	<div class="tab-content" id="nav-tabContent">
	    <div class="tab-pane fade show active" id="nav-01" role="tabpanel" aria-labelledby="nav-tab-01">
		{{ form_start(formFile) }}
		    <div class="form-group">
			{{ form_label(formFile.file) }}
			<div class="row">
			    <div class="col-md-6">
				<small>{{ form_help(formFile.file) }}</small>
				{{ form_widget(formFile.file) }}
				<span class="text-danger">
				    {{ form_errors(formFile.file) }}
				    {% for label, messages in app.flashes %}
					{% for message in messages %}
					    <div class="alert alert-{{ label }}">
						{{ message|trans }}
					    </div>
					{% endfor %}
				    {% endfor %}
				</span>
			    </div>
			</div>
		    </div>

		    <div class="d-grid gap-2 d-md-block">
			<button type="submit" value="Search" class="btn btn-primary">{% trans %}Search{% endtrans %}</button>
			<button type="reset" value="Reset" class="btn btn-secondary">{% trans %}Reset{% endtrans %}</button>
		    </div>
		{{ form_end(formFile) }}
	    </div>
	    <div class="tab-pane fade" id="nav-02" role="tabpanel" aria-labelledby="nav-tab-02">
		{{ form_start(formTag) }}
		    <div class="form-group">
			{{ form_label(formTag.tag) }}
			<div class="row">
			    <div class="col-md-6">
				<small>{{ form_help(formTag.tag) }}</small>
				{{ form_widget(formTag.tag) }}
				<span class="text-danger">
				    {{ form_errors(formTag.tag) }}
				    {% for label, messages in app.flashes %}
					{% for message in messages %}
					    <div class="alert alert-{{ label }}">
						{{ message|trans }}
					    </div>
					{% endfor %}
				    {% endfor %}
				</span>
			    </div>
			</div>
		    </div>

		    <div class="d-grid gap-2 d-md-block">
			<button type="submit" value="Search" class="btn btn-primary">{% trans %}Search{% endtrans %}</button>
			<button type="reset" value="Reset" class="btn btn-secondary">{% trans %}Reset{% endtrans %}</button>
		    </div>
		{{ form_end(formTag) }}
	    </div>
	    <div class="tab-pane fade" id="nav-03" role="tabpanel" aria-labelledby="nav-tab-03">
		{{ form_start(formName) }}
		    <div class="form-group">
			{{ form_label(formName.name) }}
			<div class="row">
			    <div class="col-md-6">
				<small>{{ form_help(formName.name) }}</small>
				{{ form_widget(formName.name) }}
				<span class="text-danger">
				    {{ form_errors(formName.name) }}
				    {% for label, messages in app.flashes %}
					{% for message in messages %}
					    <div class="alert alert-{{ label }}">
						{{ message|trans }}
					    </div>
					{% endfor %}
				    {% endfor %}
				</span>
			    </div>
			</div>
		    </div>

		    <div class="d-grid gap-2 d-md-block">
			<button type="submit" value="Search" class="btn btn-primary">{% trans %}Search{% endtrans %}</button>
			<button type="reset" value="Reset" class="btn btn-secondary">{% trans %}Reset{% endtrans %}</button>
		    </div>
		{{ form_end(formName) }}
	    </div>
	</div>
    </div>
{% endblock %}
