{% extends 'base.html.twig' %}

{% block title %}Attendance index{% endblock %}

{% block body %}
    <h1>Attendance index</h1>

    <div class="table-responsible">
	<table class="table table-hover">
            <thead>
		<tr>
                    <th>Id</th>
                    <th>Patient</th>
                    <th>Tag</th>
                    <th>CheckInAt</th>
                    <th>CheckOutAt</th>
                    <th>actions</th>
		</tr>
            </thead>
            <tbody>
		{% for attendance in attendances %}
		    <tr>
			<td>{{ attendance.id }}</td>
			<td>{{ attendance.patient.name }}</td>
			<td>{{ attendance.tag }}</td>
			<td>{{ attendance.checkinAt ? attendance.checkinAt|date('Y-m-d H:i:s') : '' }}</td>
			<td>
			    {% if attendance.checkoutAt %}
				{{ attendance.checkoutAt|date('Y-m-d H:i:s') }}
			    {% else %}
				<form method="post" action="{{ path('app_attendance_check_out', {'id': attendance.id}) }}" style="display: inline-block;" onsubmit="return confirm('Are you sure you want to check out?');">
				    <button type="submit" class="btn btn-sm btn-secondary">Check out</button>
				</form>
			    {% endif %}
			</td>
			<td>
			    <a class="btn btn-link" href="{{ path('app_attendance_show', {'id': attendance.id}) }}">Show</a>
			    <a class="btn btn-secondary" href="{{ path('app_attendance_edit', {'id': attendance.id}) }}">Edit</a>
			</td>
		    </tr>
        {% else %}
		    <tr>
			<td colspan="6">no records found</td>
		    </tr>
		{% endfor %}
            </tbody>
	</table>
    </div>

    {% if attendances.haveToPaginate == true %}
	<div class="navigation">
            {{ pagerfanta(attendances) }}
	</div>
    {% endif %}

    <a  class="btn btn-primary" href="{{ path('app_attendance_new') }}">Create new</a>
{% endblock %}
