{% extends 'base.html.twig' %}

{% block title %}{% trans %}Attendance index{% endtrans %}{% endblock %}

{% block body %}
    <ol class="breadcrumb">
	<li class="breadcrumb-item"><a href="https://www.gob.mx"><i class="icon icon-home"></i></a></li>
	<li class="breadcrumb-item"><a href="{{ path('app_index') }}">{% trans %}Begin{% endtrans %}</a></li>
	<li class="breadcrumb-item active" aria-current="page"><a href="{{ path('app_attendance_index') }}">{% trans %}Attendance{% endtrans %}</a></li>
    </ol>

    <h1>{% trans %}Attendance index{% endtrans %}</h1>
    <hr class="red">

    <div class="row">
	<div class="col count d-flex justify-content-start">
	    Registros totales: {{ attendances.getTotalItemCount }}
	</div>

	<div class="col d-flex justify-content-end">
	    <form method="get" action="{{ path('app_attendance_index') }}">
		<div class="input-group mb-3">
		    <input type="text" name="filter" class="form-control w-75" style="height: 32px" placeholder="{% trans %}Search by Name or Tag{% endtrans %}" value="{{ app.request.query.get('filter') }}">
		    <button class="btn btn-sm btn-outline-success" type="submit">{% trans %}Search{% endtrans %}</button>
		</div>
	    </form>
	</div>
    </div>

    <div class="table-responsive">
	<table class="table table-hover">
            <thead>
		<tr>
		    {% if is_granted('ROLE_SUPER_ADMIN') %}
			<th scope="col">{{ knp_pagination_sortable(attendances, 'Id'|trans, 'a.id') }}</th>
		    {% endif %}
                    <th scope="col">{{ knp_pagination_sortable(attendances, 'Patient'|trans, 'p.name') }}</th>
                    <th scope="col">{{ knp_pagination_sortable(attendances, 'Tag'|trans, 'a.tag') }}</th>
                    <th>{% trans %}Check in{% endtrans %}</th>
                    <th>{% trans %}Check out{% endtrans %}</th>
                    <th>{% trans %}actions{% endtrans %}</th>
		</tr>
            </thead>
            <tbody>
		{% for attendance in attendances %}
		    <tr>
			{% if is_granted('ROLE_SUPER_ADMIN') %}
			    <td>{{ attendance.id }}</td>
			{% endif %}
			<td>{{ attendance.patient.name|title }}</td>
			<td>{{ attendance.tag }}</td>
			<td>{{ attendance.checkinAt ? attendance.checkinAt|date('Y-m-d H:i:s') : '' }}</td>
			<td>
			    {% if attendance.checkoutAt %}
				{{ attendance.checkoutAt|date('Y-m-d H:i:s') }}
			    {% else %}
				<form method="post" action="{{ path('app_attendance_check_out', {'id': attendance.id, 'redirectRoute': 'app_attendance_index'}) }}" onsubmit="return confirm('{% trans %}Are you sure you want to check out?{% endtrans %}');">
				    <input type="hidden" name="_token" value="{{ csrf_token('checkout' ~ attendance.id) }}">
				    <button type="submit" class="btn btn-sm btn-danger">{% trans %}Check out{% endtrans %}</button>
				</form>
			    {% endif %}
			</td>
			<td>
			    <a class="btn btn-link" href="{{ path('app_attendance_show', {'id': attendance.id}) }}">{% trans %}Show{% endtrans %}</a>
			    {% if is_granted('ROLE_SUPER_ADMIN') %}
				<a class="btn btn-secondary" href="{{ path('app_attendance_edit', {'id': attendance.id}) }}">{% trans %}Edit{% endtrans %}</a>
			    {% endif %}
			</td>
		    </tr>
        {% else %}
		    <tr>
			<td colspan="6">{% trans %}no records found{% endtrans %}</td>
		    </tr>
		{% endfor %}
            </tbody>
	</table>
    </div>

    <div class="navigation">
        {{ knp_pagination_render(attendances) }}
    </div>

	<a  class="btn btn-primary" href="{{ path('app_attendance_new') }}">{% trans %}Create new{% endtrans %}</a>
{% endblock %}
