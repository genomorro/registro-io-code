{% extends 'base.html.twig' %}

{% block title %}New Attendance{% endblock %}

{% block body %}
    <h1>Create new Attendance</h1>

    <div class="row">
	{{ form_start(form) }}
	    <div class="form-group">
		{{ form_label(form.patient) }}:
		<div class="row">
		    <div class="col-md-6">
			{{ form_widget(form.patient) }}
			<span class="text-danger">{{ form_errors(form.patient) }}</span>
		    </div>
		</div>
	    </div>
	    <div class="form-group">
		{{ form_label(form.tag) }}:
		<div class="row">
		    <div class="col-md-6">
			{{ form_widget(form.tag) }}
			<span class="text-danger">{{ form_errors(form.tag) }}</span>
		    </div>
		</div>
	    </div>
	    <div class="form-group">
		{{ form_label(form.checkInAt) }}:
		<div class="row">
		    <div class="col-md-6">
			{{ form_widget(form.checkInAt) }}
			<span class="text-danger">{{ form_errors(form.checkInAt) }}</span>
		    </div>
		</div>
	    </div>
	    <div class="form-group">
		{{ form_label(form.checkOutAt) }}:
		<div class="row">
		    <div class="col-md-6">
			{{ form_widget(form.checkOutAt) }}
			<span class="text-danger">{{ form_errors(form.checkOutAt) }}</span>
		    </div>
		</div>
	    </div>

	    <div class="d-grid gap-2 d-md-block">
		<button type="submit" value="Save" class="btn btn-primary">Save</button>
		<button type="reset" value="Reset" class="btn btn-secondary">Reset</button>
		<a class="btn btn-link" href="{{ path('app_attendance_index') }}" role="button">Back to list</a>
	    </div>
	{{ form_end(form) }}
    </div>
{% endblock %}
