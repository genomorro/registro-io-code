{% extends 'base.html.twig' %}

{% block title %}Edit Attendance{% endblock %}

{% block body %}
    <h1>Edit Attendance</h1>

    <div class="row">
	{{ form_start(form) }}
	    <div class="form-group">
		{{ form_label(form.patient) }}:
		<div class="row">
		    <div class="col-md-6">
			{{ form_widget(form.patient) }}
			<span class="text-danger">{{ form_errors(form.patient) }}</span>
		    </div>
		</div>
	    </div>
	    <div class="form-group">
		{{ form_label(form.tag) }}:
		<div class="row">
		    <div class="col-md-6">
			{{ form_widget(form.tag) }}
			<span class="text-danger">{{ form_errors(form.tag) }}</span>
		    </div>
		</div>
	    </div>
	    <div class="form-group">
		{{ form_label(form.checkInAt) }}:
		<div class="row">
		    <div class="col-md-6">
			{{ form_widget(form.checkInAt) }}
			<span class="text-danger">{{ form_errors(form.checkInAt) }}</span>
		    </div>
		</div>
	    </div>
	    <div class="form-group">
		{{ form_label(form.checkOutAt) }}:
		<div class="row">
		    <div class="col-md-6">
			{{ form_widget(form.checkOutAt) }}
			<span class="text-danger">{{ form_errors(form.checkOutAt) }}</span>
		    </div>
		</div>
	    </div>

	    <div class="d-grid gap-2 d-md-block">
		<button type="submit" value="Update" class="btn btn-primary">Update</button>
		<a class="btn btn-link" href="{{ path('app_attendance_index') }}" role="button">Back to list</a>
	    </div>
	{{ form_end(form) }}
    </div>

    <div class="row">
	<div class="col-md-10"></div>
	<div class="col-md-1">
	    {{ include('attendance/_delete_form.html.twig') }}
	</div>
    </div>
{% endblock %}
