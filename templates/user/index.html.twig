{% extends 'base.html.twig' %}

{% block title %}{% trans %}User index{% endtrans %}{% endblock %}

{% block body %}
    <ol class="breadcrumb">
	<li class="breadcrumb-item"><a href="https://www.gob.mx"><i class="icon icon-home"></i></a></li>
	<li class="breadcrumb-item"><a href="{{ path('app_index') }}">{% trans %}Begin{% endtrans %}</a></li>
	<li class="breadcrumb-item active" aria-current="page"><a href="{{ path('app_user_index') }}">{% trans %}User{% endtrans %}</a></li>
    </ol>

    <h1>{% trans %}User index{% endtrans %}</h1>
    <hr class="red">

    <div class="row">
	<div class="col-12 col-md-6 d-flex justify-content-start">
	    <form class="w-100" method="get" action="{{ path('app_user_index') }}">
		<div class="input-group mb-3">
		    <input type="text" name="filter" class="form-control input-sm w-75" placeholder="{% trans %}Search by Name or Username{% endtrans %}" value="{{ app.request.query.get('filter') }}">
		    <button class="btn btn-sm btn-info" type="submit">
			<span class="icon-search" aria-hidden="true"></span>
		    </button>
		</div>
	    </form>
	</div>

	<div class="col-12 col-md-6 d-flex justify-content-md-end justify-content-start mt-2 mt-md-0">
	    Registros totales: {{ users.getTotalItemCount }}
	</div>
    </div>

    <div class="table-responsive">
	<table class="table table-hover">
            <thead>
		<tr>
                    <th scope="col">{{ knp_pagination_sortable(users, 'Id'|trans, 'u.id') }}</th>
                    <th scope="col">{{ knp_pagination_sortable(users, 'Name'|trans, 'u.name') }}</th>
                    <th scope="col">{{ knp_pagination_sortable(users, 'Username'|trans, 'u.username') }}</th>
                    <th scope="col">{{ knp_pagination_sortable(users, 'Roles'|trans, 'u.roles') }}</th>
                    <th>{% trans %}actions{% endtrans %}</th>
		</tr>
            </thead>
            <tbody>
		{% for user in users %}
		    <tr>
			<td>{{ user.id }}</td>
			<td>{{ user.name }}</td>
			<td>{{ user.username }}</td>
			<td>
			    {% if 'ROLE_SUPER_ADMIN' in user.roles %}
				{% trans %}Super Admin{% endtrans %}
			    {% elseif 'ROLE_ADMIN' in user.roles %}
				{% trans %}Admin{% endtrans %}
			    {% else %}
				{% trans %}User{% endtrans %}
			    {% endif %}
			</td>
			<td>
			    <a class="btn btn-link" href="{{ path('app_user_show', {'id': user.uuid}) }}">{% trans %}Show{% endtrans %}</a>
			    {% if not is_granted('ROLE_SUPER_ADMIN') and ('ROLE_SUPER_ADMIN' in user.roles) %}
				<p></p>
			    {% else %}
				<a class="btn btn-secondary" href="{{ path('app_user_edit', {'id': user.uuid}) }}">{% trans %}Edit{% endtrans %}</a>
			    {% endif %}
			</td>
		    </tr>
{% else %}
		    <tr>
			<td colspan="5">{% trans %}no records found{% endtrans %}</td>
		    </tr>
		{% endfor %}
            </tbody>
	</table>
    </div>

    {% if is_granted('ROLE_ADMIN') %}
	<a class="btn btn-primary" href="{{ path('app_register') }}">{% trans %}Create new{% endtrans %}</a>
    {% endif %}
{% endblock %}
