{% extends 'base.html.twig' %}

{% block title %}{% trans %}User{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}User{% endtrans %}</h1>

    <div class="table-responsible">
	<table class="table table-striped">
            <tbody>
		<tr>
                    <th>{% trans %}Id{% endtrans %}</th>
                    <td>{{ user.id }}</td>
		</tr>
		<tr>
                    <th>{% trans %}Name{% endtrans %}</th>
                    <td>{{ user.name }}</td>
		</tr>
		<tr>
                    <th>{% trans %}Username{% endtrans %}</th>
                    <td>{{ user.username }}</td>
		</tr>
		<tr>
                    <th>{% trans %}Roles{% endtrans %}</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
		</tr>
            </tbody>
	</table>
    </div>

    <div class="d-grid gap-2 d-md-block">
	<a class="btn btn-primary" href="{{ path('app_user_edit', {'id': user.id}) }}">{% trans %}Edit{% endtrans %}</a>
	<a class="btn btn-link" href="{{ path('app_user_index') }}">{% trans %}Back to list{% endtrans %}</a>
    </div>

    <div class="row">
	<div class="col-md-10"></div>
	<div class="col-md-1">
	    {{ include('user/_delete_form.html.twig') }}
	</div>
    </div>
{% endblock %}
