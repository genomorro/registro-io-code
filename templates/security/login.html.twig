{% extends 'base.html.twig' %}

{% block title %}{% trans %}Log in!{% endtrans %}{% endblock %}

{% block body %}
    <div class="row">
	<form method="post">
            {% if error %}
		<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
		<div class="mb-3">
                    {% trans %}You are logged in as{% endtrans %} {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">{% trans %}Logout{% endtrans %}</a>
		</div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">{% trans %}Please sign in{% endtrans %}</h1>
	    <div class="form-group">
		<label for="username">{% trans %}Username{% endtrans %}</label>
		<div class="row">
		    <div class="col-md-6">
			<input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus>
		    </div>
		</div>
	    </div>
	    <div class="form-group">
		<label for="password">{% trans %}Password{% endtrans %}</label>
		<div class="row">
		    <div class="col-md-6">
			<input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
		    </div>
		</div>
	    </div>
            <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
            <input type="checkbox" name="_remember_me" id="_remember_me">
            <label for="_remember_me">Remember me</label>
            </div>
            #}

	    <div class="d-grid gap-2 d-md-block">
		<button class="btn btn-primary" type="submit">
		    {% trans %}Sign in{% endtrans %}
		</button>
		<button type="reset" value="Reset" class="btn btn-secondary">
		    {% trans %}Reset{% endtrans %}
		</button>
	    </div>
	</form>
    </div>
{% endblock %}
